<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.slymapp.diverlog.view.LogAddFragment"
        android:padding="@dimen/content_padding"
        android:background="@android:color/background_light"
        android:id="@+id/log_add_main_layout"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ScrollView android:id="@+id/log_add_details"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/log_add_guideline">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.Guideline android:id="@+id/log_add_center_vertical_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintGuide_percent="0.5"/>

                <android.support.constraint.ConstraintLayout android:id="@+id/log_add_diving_number_input"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/LabelValueSetInput">

                    <TextView android:id="@+id/log_add_diving_number_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/diving_number"
                        style="@style/LogDetailLabel"/>

                    <TextView android:id="@+id/log_add_diving_number_value"
                        android:layout_marginStart="@dimen/input_margin"
                        app:layout_constraintStart_toEndOf="@id/log_add_diving_number_label"
                        app:layout_constraintBaseline_toBaselineOf="@id/log_add_diving_number_label"
                        style="@style/LogDetailText"
                        tools:text="1"/>

                </android.support.constraint.ConstraintLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/log_add_date_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/log_add_center_vertical_guideline"
                    app:layout_constraintTop_toBottomOf="@id/log_add_diving_number_input">

                    <android.support.design.widget.TextInputEditText android:id="@+id/log_add_date_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/date"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/log_add_weather_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/log_add_weather_value"
                    app:layout_constraintStart_toEndOf="@id/log_add_center_vertical_guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/log_add_diving_number_input">

                    <android.support.design.widget.TextInputEditText android:id="@+id/log_add_weather_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="@string/weather_hint"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/log_add_place_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/log_add_date_input">

                    <android.support.design.widget.TextInputEditText android:id="@+id/log_add_place_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/place_hint"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/log_add_start_pressure_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/log_add_start_pressure_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/log_add_center_vertical_guideline"
                    app:layout_constraintTop_toBottomOf="@id/log_add_place_input">

                    <android.support.design.widget.TextInputEditText android:id="@+id/log_add_start_pressure_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="@string/start_pressure_hint"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/log_add_end_pressure_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/log_add_end_pressure_value"
                    app:layout_constraintStart_toEndOf="@id/log_add_center_vertical_guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/log_add_place_input">

                    <android.support.design.widget.TextInputEditText android:id="@+id/log_add_end_pressure_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="@string/end_pressure_hint"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/log_add_in_time_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/log_add_in_time_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/log_add_center_vertical_guideline"
                    app:layout_constraintTop_toBottomOf="@id/log_add_start_pressure_input">

                    <android.support.design.widget.TextInputEditText android:id="@+id/log_add_in_time_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/in_time_hint"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/log_add_out_time_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/log_add_out_time_value"
                    app:layout_constraintStart_toEndOf="@id/log_add_center_vertical_guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/log_add_start_pressure_input">

                    <android.support.design.widget.TextInputEditText android:id="@+id/log_add_out_time_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/out_time_hint"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/log_add_entry_way_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/log_add_entry_way_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/log_add_in_time_input">

                    <Spinner android:id="@+id/log_add_entry_way_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/entry_way"
                        android:spinnerMode="dropdown"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/log_add_transparency_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/log_add_transparency_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/log_add_entry_way_input">

                    <android.support.design.widget.TextInputEditText android:id="@+id/log_add_transparency_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="@string/transparency_hint"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/log_add_suits_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/log_add_suits_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/log_add_transparency_input">

                    <Spinner android:id="@+id/log_add_suits_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/suits"
                        android:spinnerMode="dropdown"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/log_add_weight_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/log_add_weight_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/log_add_suits_input">

                    <android.support.design.widget.TextInputEditText android:id="@+id/log_add_weight_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="@string/weight_hint"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/log_add_average_depth_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/log_add_average_depth_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/log_add_center_vertical_guideline"
                    app:layout_constraintTop_toBottomOf="@id/log_add_weight_input">

                    <android.support.design.widget.TextInputEditText android:id="@+id/log_add_average_depth_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="@string/max_depth_hint"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/log_add_max_depth_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/log_add_max_depth_value"
                    app:layout_constraintStart_toStartOf="@id/log_add_center_vertical_guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/log_add_weight_input">

                    <android.support.design.widget.TextInputEditText android:id="@+id/log_add_max_depth_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="@string/average_depth_hint"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/log_add_temperature_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/log_add_temperature_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/log_add_max_depth_input">

                    <android.support.design.widget.TextInputEditText android:id="@id/log_add_temperature_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="@string/temperature_hint"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/log_add_diving_time_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/log_add_diving_time_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/log_add_temperature_input">

                    <android.support.design.widget.TextInputEditText android:id="@id/log_add_diving_time_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/diving_time_hint"/>

                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
        </ScrollView>

        <android.support.constraint.Guideline android:id="@+id/log_add_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@dimen/submit_area_size"/>

        <com.beardedhen.androidbootstrap.BootstrapButton android:id="@+id/log_add_submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/log_add_guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:bootstrapBrand="success"
            app:bootstrapSize="xl"
            app:buttonMode="regular"
            app:showOutline="false"
            android:focusable="true"
            app:roundedCorners="true"/>

    </android.support.constraint.ConstraintLayout>
</layout>